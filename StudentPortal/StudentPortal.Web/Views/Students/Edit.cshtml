@model StudentPortal.Web.Models.Entities.Student;

<h1>Edit Student</h1>
<div class="mt-3">
    <form method="post">
        <div class="form-group">
            <label class="form-label" for="id">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" value=@Model.Id asp-for="id" readonly>
        </div>

        <div class="form-group">
            <label class="form-label" for="name">Name</label>
            <input type="text" class="form-control" id="name" value=@Model.Name asp-for="Name" placeholder="Enter Name">
        </div>

        <div class="form-group">
            <label class="form-label" for="email">Email address</label>
            <input type="email" class="form-control" id="email" asp-for="Email" placeholder="Enter email">
        </div>

        <div class="form-group">
            <label class="form-label" for="phone">Phone</label>
            <input type="text" class="form-control" id="phone" asp-for="Phone" placeholder="Enter Phone">
        </div>

        <div class="form-group mt-3">
            <input type="checkbox" class="form-check-input" id="subscribed" asp-for="Subscribed" />
            <label class="form-check-label" for="subscribed">Subscribed</label>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Edit</button>
            <button type="submit" asp-action="Delete"
                    asp-controller="Students"
                    class="btn btn-danger">
                Delete
            </button>
        </div>


</form>

