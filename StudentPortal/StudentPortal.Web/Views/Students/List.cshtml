@{
}

@model List<StudentPortal.Web.Models.Entities.Student>

<h1>Students</h1>

<a class="btn btn-primary m-3" asp-action="Add" asp-controller="Students">Add Student</a>

<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Subscribed</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model){
            <tr>
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <div class="flex justify-content-evenly">
                        <a 
                          asp-controller="Students" 
                          asp-action="Edit" 
                          asp-route-id=@student.Id 
                          class="btn btn-primary">Edit</a>

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>